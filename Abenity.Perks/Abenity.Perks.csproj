<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>halomademeapc</Authors>
    <Version>0.1.0-alpha</Version>
    <Description>.NET Standard API Client for interacting with the Abenity Perks API
I do not have credentials so this release is untested</Description>
    <PackageProjectUrl>https://github.com/halomademeapc/Abenity.Perks</PackageProjectUrl>
    <RepositoryUrl>https://github.com/halomademeapc/Abenity.Perks</RepositoryUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryType>Git</RepositoryType>
    <PackageTags>abenity</PackageTags>
    <PackageReleaseNotes>Initial preview</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

